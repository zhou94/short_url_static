{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-react-hooks"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "compilerOptions": {
        "target": "es5"
    },
    "linterOptions": {
        "exclude": [
            "src/assets/js/**",
            "src/test/**"
        ]
    },
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "arrow-return-shorthand": true,
        "object-shorthand-properties-first": false,
        "variable-name": false,
        "max-line-length": [
            true,
            400
        ],
        "jsx-no-lambda": false,
        "import-name": false,
        "align": [
            true,
            "parameters",
            "statements"
        ],
        "jsx-alignment": false,
        "jsx-no-multiline-js": false,
        "jsx-wrap-multiline": false,
        "react-hooks-nesting": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "function-name": false,
        "prefer-array-literal": false
    },
    "rulesDirectory": []
}